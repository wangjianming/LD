.calcite
  .simpleGeocoder
    .esriGeocoderContainer
      width: 225px;
      font-size: $fontSizeDefault;
      line-height: ($fontSizeDefault + 2); /* 16px */
      font-family $fontFamilyDefault

    .esriGeocoder {
      display: block;
      width: 100%;
      margin: 0;
      calciteArcGISPro_ButtonDefault();
      calciteWeb_RoundRadius($borderRadiusSize1);

      &:hover {
        calciteArcGISPro_ButtonHover()
        background-color CalciteColorWhite
      }
      &:focus {
        CalciteWeb_TextInput_BoxShadowInset("blue");
        //-moz-box-shadow:    inset 0 0 10px $backgroundFillActive;
        //-webkit-box-shadow: inset 0 0 10px $backgroundFillActive;
        //box-shadow:         inset 0 0 10px $backgroundFillActive;
      }
    }
    .esriGeocoderIcon
      float: left;
      outline: 0;
      width: 24px //16px;
      height: 24px //16px;
      display: block;
      overflow: hidden;
      //padding: $paddingDefaultSpacer 0 $paddingDefaultSpacer $paddingDefaultSpacer;
      margin 0
      text-align center

    .esriGeocoder
      .esriGeocoderSearch {
        cursor: pointer;
        margin-left: $marginDefaultSpacer;
        background none
        /*background: url( $imageSimpleGeocoder ) no-repeat 0 0; /* "../dijit/images/simpleGeocoder.png" */

        color: $textColorDefault
        &:hover,
        &:focus {
          color: $textColorHover
          opacity 1
        }
        &:before {
          iconfont("esriIconSearch");
          position: relative;
          top: 2px;
          left: 0px;
          font-size: $fontSizeIconDefault;
        }
      }

      .esriGeocoderMenuArrow {
        display none
        cursor pointer
        background none /* url( $imageSimpleGeocoder ) no-repeat -32px 0; /*"../dijit/images/simpleGeocoder.png"*/

        color: $textColorDefault
        &:hover,
        &:focus {
          color $textColorHover
          opacity 1
        }
        &:before {
          iconfont("esriIconDownArrowSmall");
          position relative
          top 3px
          left 0px
          font-size $fontSizeIconDefault
        }
      }
      .esriGeocoderReset {
        padding: 0;
        margin: 0; /*6px 6px 6px 0;*/
        float: right;
        display: none;
      }

    .esriGeocoderMenuActive .esriGeocoderMenuArrow,
    .esriGeocoderMenuActive .esriGeocoderMenuArrow:before {
      //iconfont("esriIconDownArrowSmall");
      -webkit-transform: rotate(-180deg);
      -moz-transform: rotate(-180deg);
      -o-transform: rotate(-180deg);
      -ms-transform: rotate(-180deg);
      transform: rotate(-180deg);
      //transition: transform 150ms ease;
      top: -1px;
      left: 2px;
    }
    .esriGeocoderMultiple .esriGeocoderMenuArrow
      display: block;
    .esriGeocoderMenu
      position: relative;
      font-size: $fontSizeDefault;
      text-align: left;
      list-style: none;
      background: CalciteColorWhite
      -webkit-background-clip: padding-box;
      background-clip: padding-box;
      border 1px solid CalciteColorWhite
      calciteWeb_RoundRadius(0 0 $borderRadiusSize2 $borderRadiusSize2);
      //calciteWeb_BoxShadow();
      calciteWeb_NoBoxShadow();

      .esriGeocoderMenuHeader
        margin: 10px 0 2px 0;
        display: block;
        color: CalciteColorWhite;
        padding: 3px 6px;
        font-weight:normal
        font-size: ($fontSizeDefault - 2px);
        font-family: $fontFamilyDefault;
        background: CalciteColorGray145
        &:first-child
          margin-top 0

      .esriGeocoderMenuClose
        background none
        color CalciteColorWhite
        font-size $fontSizeIconDefault
        &:hover,
        &:focus {
          color: $textColorHover
          opacity 1
        }
      .esriGeocoderMenuClose:before
        iconfont("esriIconClose")
        position: relative;
        top: -4px;
        right: 4px;

      .esriGeocoderSelected
        calciteArcGISPro_ButtonActive()
        &:hover,
        &:focus {
          outline:none;
          calciteArcGISPro_ButtonActiveHover()
        }
      .esriGeocoderSelected .esriGeocoderSelectedCheck
        background-image none

    .esriGeocoderResults
      background: CalciteColorWhite
      -webkit-background-clip: padding-box;
      background-clip: padding-box;
      border 1px solid CalciteColorWhite
      calciteWeb_RoundRadius(0 0 $borderRadiusSize2 $borderRadiusSize2);
      //calciteWeb_BoxShadow();
      calciteWeb_NoBoxShadow();

    .esriGeocoderResults li,
    .esriGeocoderResult
      background-color CalciteColorWhite
      &:hover,
      &:focus {
        outline:none;
        calciteArcGISPro_ButtonHover()
      }
.map .simpleGeocoder .esriGeocoder
    border: 1px solid CalciteColorWhite;
    background: CalciteColorWhite
    calciteWeb_BoxShadow()
    calciteWeb_RoundRadius($borderRadiusSize2)
    color: $textColorDefault;
    &:hover {
      calciteArcGISPro_ButtonHover()
      background-color CalciteColorWhite
    }
